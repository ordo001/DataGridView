@using DataGridView.Entities.Enums
@model DataGridView.Entities.Student

<form asp-action="Update" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="mb-2">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control"/>
    </div>

    <div class="mb-2">
        <label asp-for="Gender"></label>
        <select asp-for="Gender"
                asp-items="Html.GetEnumSelectList<Gender>()"
                class="form-select">
        </select>
    </div>

    <div class="mb-2">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" type="date" class="form-control"/>
    </div>

    <div class="mb-2">
        <label asp-for="FormEducation"></label>
        <select asp-for="FormEducation"
                asp-items="Html.GetEnumSelectList<FormEducation>()"
                class="form-select">
        </select>
    </div>

    <div class="row">
        <div class="col">
            <input asp-for="MathScore" class="form-control" placeholder="Математика"/>
        </div>
        <div class="col">
            <input asp-for="RussianScore" class="form-control" placeholder="Русский"/>
        </div>
        <div class="col">
            <input asp-for="InformaticsScore" class="form-control" placeholder="Информатика"/>
        </div>
    </div>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-success">
            Сохранить
        </button>
    </div>
</form>