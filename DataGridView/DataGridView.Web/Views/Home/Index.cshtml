@model IEnumerable<DataGridView.Entities.Student>


@{
    ViewData["Title"] = "Список учеников";
}

<h1 class="mb-3">Список студентов</h1>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ФИО</th>
        <th>Пол</th>
        <th>Дата рождения</th>
        <th>Форма обучения</th>
        <th>Математика</th>
        <th>Русский</th>
        <th>Информатика</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FullName</td>
            <td>@student.Gender</td>
            <td>@student.BirthDate.ToString("dd.MM.yyyy")</td>
            <td>@student.FormEducation</td>
            <td>@student.MathScore</td>
            <td>@student.RussianScore</td>
            <td>@student.InformaticsScore</td>
            <td>
                <div style="display: flex; gap: 10px;">
                    <form asp-controller="Home" asp-action="Delete" asp-route-studentId="@student.Id" formmethod="post">
                        <button style="margin-right: 30px" class="btn btn-danger btn-sm">
                            Удалить
                        </button>
                    </form>
                    <button style="margin-right: 30px" class="btn btn-warning btn-sm"
                            onclick="openEditModal('@student.Id')">
                        Изменить
                    </button>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="modal fade" id="editStudentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Редактирование студента</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editStudentModalBody"></div>
        </div>
    </div>
</div>


<script>
function openEditModal(id) {
    fetch(`/Home/Edit?id=${id}`)
        .then(res => res.text())
        .then(html => {
            document.getElementById('editStudentModalBody').innerHTML = html;

            const modal = new bootstrap.Modal(
                document.getElementById('editStudentModal')
            );
            modal.show();
        });
}
</script>




